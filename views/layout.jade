doctype html
html(lang="dk")
    head
        title= title
        link(rel="icon", href="/favicon.ico")
        link(rel="stylesheet", href="/bootstrap.min.css")
        link(rel="stylesheet", href="/bootstrap-custom.css")
        link(rel="stylesheet", href="/select2/select2.css")
        link(rel="stylesheet", href="/select2-bootstrap-css/select2-bootstrap.css")
        style.
            .container {
                width: 98%;
            }
    body
        header
            nav.navbar.navbar-inverse(role="navigation")
                div(container)
                    header.navbar-header
                        button.navbar-toggle(type="button", data-toggle="collapse", data-target=".navbar-inverse-collapse")
                            span.icon-bar
                            span.icon-bar
                            span.icon-bar
                        a.navbar-brand(href="/") Aarhus
                    nav.navbar-collapse.collapse.navbar-inverse-collapse
                        - routes = []
                        - routes.push({ name: "Jobkategori", href: "/jobkategori" })
                        - routes.push({ name: "Medarbejder", href: "/medarbejder" })
                        - routes.push({ name: "Registrering", href: "/registrering" })
                        - routes.push({ name: "Sekret√¶r", href: "/godkende" })
                        ul.nav.navbar-nav
                            each route in routes
                                li(class=title == route.name ? "active" : "")
                                    a(href=route.href) #{route.name}
        section.container
            block container
        script(src="/modernizr/modernizr.js")
        script(src="/jquery/dist/jquery.min.js")
        script(src="/bootstrap/dist/js/bootstrap.min.js")
        script(src="/select2/select2.min.js")
        block scripts